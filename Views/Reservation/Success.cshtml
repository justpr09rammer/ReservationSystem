@{
    ViewData["Title"] = "Rezervasiya Uğurlu";
}
<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary: #6366f1;
            --primary-dark: #4f46e5;
            --secondary: #f59e0b;
            --success: #10b981;
            --success-dark: #059669;
            --dark: #1e293b;
            --light: #f8fafc;
        }

        body {
            background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            min-height: 100vh;
            display: grid;
            place-items: center;
            margin: 0;
            padding: 1rem;
        }

        .success-container {
            width: 100%;
            max-width: 500px;
        }

        .success-card {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-radius: 16px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.1);
            padding: 2.5rem;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.1);
            text-align: center;
        }

        .success-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(31, 38, 135, 0.15);
        }

        .success-icon {
            font-size: 4rem;
            color: var(--success);
            margin-bottom: 1.5rem;
            animation: bounce 1s;
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
            40% {transform: translateY(-20px);}
            60% {transform: translateY(-10px);}
        }

        .success-title {
            color: var(--dark);
            font-weight: 700;
            font-size: 1.75rem;
            margin-bottom: 1rem;
        }

        .success-message {
            color: var(--dark);
            opacity: 0.9;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .success-note {
            color: var(--dark);
            opacity: 0.7;
            font-size: 0.95rem;
            margin-bottom: 2rem;
        }

        .btn-container {
            display: flex;
            gap: 1rem;
            justify-content: center;
        }

        .btn {
            padding: 0.875rem 1.5rem;
            border-radius: 10px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            color: white;
            border: none;
            box-shadow: 0 4px 6px rgba(79, 70, 229, 0.1);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(79, 70, 229, 0.15);
        }

        .btn-outline {
            background: transparent;
            color: var(--primary);
            border: 2px solid var(--primary);
        }

        .btn-outline:hover {
            background-color: rgba(99, 102, 241, 0.05);
        }

        @media (max-width: 480px) {
            .success-card {
                padding: 2rem 1.5rem;
            }
            
            .btn-container {
                flex-direction: column;
            }
            
            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <div class="success-container">
        <div class="success-card">
            <div class="success-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h1 class="success-title">Rezervasiya Uğurla Tamamlandı!</h1>
            <p class="success-message">Rezervasiyanız uğurla qeydə alındı. Təyin olunmuş vaxtda sizi gözləyəcəyik.</p>
            <p class="success-note">Rezervasiyanızı ləğv etmək və ya dəyişiklik etmək üçün bizimlə əlaqə saxlayın.</p>
            
            <div class="btn-container">
                <a href="/Reservation/Create" class="btn btn-primary">
                    <i class="fas fa-calendar-plus"></i> Yeni Rezervasiya
                </a>
                <a href="/Home/Index" class="btn btn-outline">
                    <i class="fas fa-home"></i> Ana Səhifə
                </a>
            </div>
        </div>
    </div>
</body>
</html>